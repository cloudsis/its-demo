
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <!-- 
        <TextView
            android:id="@+id/diaChartView"
            android:layout_width="420dp"
            android:layout_height="250dp"
            android:text="グラフエリア"
            android:textAppearance="?android:attr/textAppearanceLarge" />

		 -->
        <jp.co.seino.sis.chart.EcoChartView
			android:id="@+id/diaChartView"
			android:layout_margin="10dip"
            android:layout_width="420dp"
            android:layout_height="250dp"
			/>

        <LinearLayout
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

		    <Button
		        android:id="@+id/diaEndButton"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="100dp"
		        android:text="終了" />
            
            <TextView
                android:id="@+id/diaHeikintextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:text="平均 xx.x km/l"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/diaMokuhyotextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:padding="10dp"
                android:text="目標 xx.x km/l"
                android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                android:id="@+id/diaScoretextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/text_border"
                android:padding="20dp"
                android:text="xx点"
                android:textAppearance="?android:attr/textAppearanceLarge" />

        </LinearLayout>
    </LinearLayout>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content" >

        <Button
            android:id="@+id/dia1minButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1分" />

        <Button
            android:id="@+id/dia5minButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5分" />

        <Button
            android:id="@+id/dia10minButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10分" />
    </LinearLayout>



</LinearLayout>